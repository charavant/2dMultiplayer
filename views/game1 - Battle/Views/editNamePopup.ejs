<!-- Edit Name Popup -->
<div id="editNamePopup" class="popup" style="align-items: center; padding-top: 10vh; overflow-y: auto;">
  <div id="editNamePopupContent" style="background: rgba(20, 33, 52, 0.95); border: 2px solid var(--accent); border-radius: 15px; padding: 2rem; max-width: 90%; box-shadow: 0 0 20px rgba(0, 229, 255, 0.3); margin: 0 auto; min-height: fit-content;">
    <h3 style="color: var(--accent); margin-bottom: 1rem; font-size: 1.5rem;">
      <i class="bi bi-pencil-square"></i> Edit Name
    </h3>
    <input type="text" id="editNameInput" class="form-control text-center mb-3" placeholder="Enter new name" maxlength="20" style="background: rgba(0,0,0,0.3); border: 1px solid var(--accent); color: var(--text-light);">
    <div class="d-flex gap-2 justify-content-center">
      <button id="saveNameBtn" class="btn" style="background: var(--accent); color: #00131a; border: none; font-weight: bold; padding: 0.75rem 1.5rem;">
        <i class="bi bi-check-lg"></i> Save
      </button>
      <button id="cancelEditNameBtn" class="btn" style="background: transparent; color: var(--text-light); border: 1px solid rgba(255,255,255,0.3); padding: 0.75rem 1.5rem;">
        <i class="bi bi-x-lg"></i> Cancel
      </button>
    </div>
  </div>
</div>
